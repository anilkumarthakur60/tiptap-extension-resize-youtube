{
  "name": "@anilkumarthakur/tiptap-extension-resize-youtube",
  "version": "0.0.5",
  "description": "Resizable YouTube embed extension for TipTap with drag controls and alignment options",
  "private": false,
  "type": "module",
  "license": "MIT",
  "homepage": "https://anilkumarthakur60.github.io/tiptap-extension-resize-youtube/",
  "repository": {
    "type": "git",
    "url": "https://github.com/anilkumarthakur60/tiptap-extension-resize-youtube.git"
  },
  "main": "dist/index.umd.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "dev:demo": "cd example && npm run dev",
    "build:demo": "cd example && npm run build",
    "lint": "eslint . --ignore-pattern node_modules/ --ignore-pattern dist/ --ignore-pattern package-lock.json",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.9",
    "eslint": "^9.39.2",
    "globals": "^17.0.0",
    "prettier": "3.8.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4",
    "vitepress": "^2.0.0-alpha.15"
  },
  "keywords": [
    "tiptap",
    "extension",
    "youtube",
    "resize",
    "video",
    "plugin",
    "media",
    "responsive",
    "embed"
  ],
  "peerDependencies": {
    "@tiptap/extension-youtube": "^3.15.3",
    "@tiptap/pm": "^3.15.3"
  }
}
